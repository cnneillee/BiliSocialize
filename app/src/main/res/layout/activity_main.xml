<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin"
        android:gravity="center_vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/tv_log_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_5dp_white_bg"
                android:gravity="center_vertical"
                android:minHeight="300dp"
                android:text="@string/dummy_text" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sign_qq"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="48dp"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/sign_qq" />

        <ImageView
            android:id="@+id/sign_wechat"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="48dp"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/sign_wechat" />

        <ImageView
            android:id="@+id/sign_sina"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/sign_weibo" />
    </LinearLayout>
</LinearLayout>